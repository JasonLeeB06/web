        <link rel="stylesheet" type="text/css" href="/fonts/space-grotesk/space-grotesk.css" />
	</head>
	<body>
		<slot />
	</body>
	<script is:inline>
        function setLanguage(lang) {
          fetch(`public/translations/${lang}.json`)
            .then(response => response.json())
            .then(translations => {
			  document.getElementById('pronouns').innerText = translations.pronouns;
              document.getElementById('location').innerText = translations.location;
              document.getElementById('age').innerText = translations.age;
              document.getElementById('love').innerText = translations.love;
              document.getElementById('job').innerText = translations.job;
			  document.getElementById('birthdayDate').innerText = translations.birthdayDate;
			  document.getElementById('currwork').innerText = translations.currwork;
              document.getElementById('recommendations').innerHTML = translations.recommendations;
			  document.getElementById('paypal').innerText = translations.paypal;
			  document.getElementById('birthday').innerText = translations.birthday;
			  document.getElementById('legal').innerText = translations.legal;
			  
            });
        }

		setLanguage('en');
      </script>
</html>